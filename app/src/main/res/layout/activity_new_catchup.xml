    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:id="@+id/btn_new_catchup_place"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:text="Select place from Google Maps"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:layout_below="@id/tv_new_catchup_time"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_enter_a_place"
        android:layout_below="@id/btn_new_catchup_place"
        android:hint="Or Enter A Place"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />

    <Button
        android:layout_marginTop="40dp"
        android:id="@+id/btn_invite_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="?android:attr/textAppearanceButton"
        android:text="Invite Contacts"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:layout_below="@id/btn_new_catchup_place"
        android:layout_centerHorizontal="true"
        />


    <Button
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
        android:background="@color/colorAccent"
        android:textColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create"
        android:elevation="4dp"
        android:id="@+id/btn_create_catchup"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="onButtonClick" />



    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_above="@id/btn_create_catchup"
        android:id="@+id/rv_invited_contacts_list"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_below="@id/btn_invite_contacts"
        android:layout_height="wrap_content" />

</RelativeLayout>
